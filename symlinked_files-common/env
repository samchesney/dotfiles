# Environment Modules
if [ $(command -v /usr/local/Cellar/modules/3.2.10/Modules/bin/modulecmd) ]; then
  # Assuming installation via Brew (and so not on the PATH), if installed at all
  source /usr/local/Cellar/modules/3.2.10/Modules/init/bash
fi

# Phabricator
if [ -d $HOME/.phabricator ]; then
  export PATH="$HOME/.phabricator/arcanist/bin:$PATH"
fi

# Python
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi
export PIPENV_VENV_IN_PROJECT=1

# Rust
if [ -d $HOME/.cargo ]; then
  export PATH="$HOME/.cargo/bin:$PATH"
fi

# Machine specific dotfile
if [ -f $HOME/.env_extra ]; then
  source $HOME/.env_extra
fi
